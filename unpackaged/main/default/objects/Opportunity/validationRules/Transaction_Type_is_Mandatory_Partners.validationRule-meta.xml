<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Transaction_Type_is_Mandatory_Partners</fullName>
    <active>true</active>
    <errorConditionFormula>AND( 
NOT(ISBLANK( Partner__c )), 
ISBLANK(TEXT( Transaction_Type__c ) 
))</errorConditionFormula>
    <errorDisplayField>Transaction_Type__c</errorDisplayField>
    <errorMessage>Transaction Type is required when Partner field is populated.</errorMessage>
</ValidationRule>
